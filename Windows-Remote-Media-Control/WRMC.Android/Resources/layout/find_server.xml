<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<android.support.v7.widget.Toolbar
		android:layout_width="match_parent"
		android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/find_server_toolbar"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="@string/find_server_toolbar_title"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/find_server_scroll_view"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:id="@+id/find_server_known_layout">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:layout_marginHorizontal="15dp"
					android:text="@string/find_server_known_header"
					android:textColor="@color/textColorPrimary"
					android:textSize="@dimen/find_server_header_font_size"/>
				<android.support.v7.widget.RecyclerView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="20dp"
					android:paddingHorizontal="15dp"
					android:id="@+id/find_server_known_recycler_view"
					android:background="@color/colorPrimary"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:id="@+id/find_server_available_layout">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:layout_marginHorizontal="15dp"
					android:text="@string/find_server_available_header"
					android:textColor="@color/textColorPrimary"
					android:textSize="@dimen/find_server_header_font_size"/>
				<android.support.v7.widget.RecyclerView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:paddingHorizontal="15dp"
					android:id="@+id/find_server_available_recycler_view"
					android:background="@color/colorPrimary"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>